              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/applications?candidateId={{userId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications"],
              "query": [
                {
                  "key": "candidateId",
                  "value": "{{userId}}"
                }
              ]
            }
          },
          "response": []
        },
