              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{accessToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"candidateId\": \"{{userId}}\",\n  \"jobId\": \"job-1\",\n  \"company\": \"Tech Company\",\n  \"position\": \"Frontend Developer\",\n  \"availablePositions\": 1,\n  \"status\": \"active\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/applications",
              "host": ["{{baseUrl}}"],
              "path": ["api", "applications"]
            }
          },
          "response": []
